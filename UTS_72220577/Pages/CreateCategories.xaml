<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UTS_72220577.Pages.CreateCategories"
             Title="Create Category">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Create New Category" FontSize="Title" HorizontalOptions="Center" />

        <Entry x:Name="nameEntry" Placeholder="Category Name" />

        <Entry x:Name="descriptionEntry" Placeholder="Category Description" />

        <Button Text="Save" Clicked="OnSaveCategoryClicked" />
    </VerticalStackLayout>
</ContentPage>