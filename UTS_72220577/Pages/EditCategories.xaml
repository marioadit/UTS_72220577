<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UTS_72220577.Pages.EditCategories"
             Title="Edit Category">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Edit Category" FontSize="Title" HorizontalOptions="Center" />

        <Label Text="Category ID" />
        <Entry x:Name="categoryIdEntry" IsReadOnly="True" />

        <Label Text="Category Name" />
        <Entry x:Name="nameEntry" Placeholder="Category Name" />

        <Label Text="Category Description" />
        <Entry x:Name="descriptionEntry" Placeholder="Category Description" />

        <Button Text="Update" Clicked="OnUpdateCategoryClicked" />
    </VerticalStackLayout>
</ContentPage>
